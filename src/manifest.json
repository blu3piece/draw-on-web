{
    "manifest_version": 3,
    "name": "Draw on Web",
    "description": "Alt + 1 으로 토글가능한 임시 그림판!",
    "version": "1.0",
    "action": {
      "default_popup": "popup.html",
      "default_icon": "images/icon.png"
    },
    "icons": {
        "128":"images/icon.png"
    },
    "content_scripts": [
        {
          "css": [ "css/style.css" ],
          "js": ["main.js"],
          "matches": [
            "https://*/*",
            "http://*/*"
          ]
        }
      ]
  }